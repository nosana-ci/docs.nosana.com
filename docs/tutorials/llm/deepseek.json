{
  "version": "0.1",
  "type": "container",
  "meta": {
    "trigger": "dashboard"
  },
  "ops": [
    {
      "type": "container/run",
      "id": "vllm",
      "args": {
        "entrypoint": [],
        "cmd": [
          "/bin/sh",
          "-c",
          "python3",
          "-m vllm.entrypoints.openai.api_server",
          "--model deepseek-ai/DeepSeek-R1-Distill-Qwen-1.5B",
          "--served-model-name R1-Qwen-1.5B",
          "--port 9000",
          "--max-model-len 130000"
        ],
        "image": "docker.io/vllm/vllm-openai:latest",
        "gpu": true,
        "expose": 9000
      }
    }
  ]
}
